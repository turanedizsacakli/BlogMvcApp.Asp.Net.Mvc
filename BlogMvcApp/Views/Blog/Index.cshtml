@model IEnumerable<BlogMvcApp.Models.Blog>

@{
    ViewBag.Title = "Index";
}

<h2>Blog List</h2>
<hr />

<p>
    @Html.ActionLink("Create New Blog", "Create", null, new {@class="btn btn-primary"})
</p>
<hr />
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th style="width:20px;">
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Explanation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Approval)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddedHomePage)
        </th>
        <th style="width:150px;"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Explanation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Photo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @if (item.Approval)
            {
                <label class="label label-success">Onaylı</label>
            }
            else
            {
                <label class="label label-danger">Onaylanmadı</label>
            }
            @*@Html.DisplayFor(modelItem => item.Approval)*@
        </td>
        <td>
            @if (item.AddedHomePage)
            {
                <label class="label label-success">HomePage</label>
            }
            else
            {
                <label class="label label-danger">Not HomePage</label>
            }
            @*@Html.DisplayFor(modelItem => item.AddedHomePage)*@
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id },new {@class="btn btn-warning btn-xl"}) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-primary btn-xs" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
